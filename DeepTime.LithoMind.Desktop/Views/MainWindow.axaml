<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DeepTime.LithoMind.Desktop.ViewModels"
        xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:models="using:LithoMind.Core.Models.UI"
        x:Class="DeepTime.LithoMind.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        x:Name="RootWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="岩相古地理数智化重建系统原型 v2 版"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.DataTemplates>
        <!-- 菜单项数据模板: 支持递归渲染子菜单 -->
        <TreeDataTemplate DataType="models:MenuItemModel" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Header}" VerticalAlignment="Center"/>
        </TreeDataTemplate>
    </Window.DataTemplates>

    <Window.Styles>
        <!-- 菜单项样式: 自动绑定命令 -->
        <Style Selector="MenuItem" x:DataType="models:MenuItemModel">
            <Setter Property="Header" Value="{Binding Header}" />
            <Setter Property="ItemsSource" Value="{Binding Children}" />
            <Setter Property="Command" Value="{Binding $parent[Window].((vm:MainViewModel)DataContext).ExecuteMenuCommand}" />
            <Setter Property="CommandParameter" Value="{Binding CommandId}" />
            <!-- 移除 InputGesture 绑定，避免类型转换错误 -->
        </Style>
        
        <!-- 分隔符样式 -->
        <Style Selector="MenuItem[Tag='Separator']">
            <Setter Property="Template">
                <ControlTemplate>
                    <Separator Margin="2,4"/>
                </ControlTemplate>
            </Setter>
        </Style>
        <!-- 导航按钮样式 -->
        <Style Selector="RadioButton.NavBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Tag}" FontSize="14"/>
                            <TextBlock Text="{TemplateBinding Content}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.NavBtn:pointerover">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        <Style Selector="RadioButton.NavBtn:checked">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <!-- 第一行: 全局菜单栏 -->
        <Border Grid.Row="0" Height="30" Background="#FFFFFF">
            <Menu ItemsSource="{Binding GlobalMenus}" 
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Left"
                  Margin="10,0"
                  Background="Transparent"/>
        </Border>

        <!-- 第二行: 场景工具栏菜单 -->
        <Border Grid.Row="1" Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="0,1" Height="36">
            <Menu ItemsSource="{Binding CurrentModuleMenus}" 
                  VerticalAlignment="Center" 
                  Margin="10,0"
                  Background="Transparent"/>
        </Border>

        <dock:DockControl Grid.Row="2" 
                          Layout="{Binding Layout}" 
                          IsVisible="{Binding Layout, Converter={x:Static ObjectConverters.IsNotNull}}" />

        <Border Grid.Row="3" Background="#EEEEEE" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="0,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="数据资源管理" Tag="📂"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_DataMgr" IsChecked="True"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="井综合分析" Tag="📊"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_SingleWell"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="地层对比" Tag="🧱"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Strat"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="地震综合分析" Tag="🌊"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Seismic"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="编图制图" Tag="🗺️"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Mapping"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>