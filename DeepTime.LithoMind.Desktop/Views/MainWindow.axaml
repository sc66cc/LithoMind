<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DeepTime.LithoMind.Desktop.ViewModels"
        xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:models="using:LithoMind.Core.Models.UI"
        x:Class="DeepTime.LithoMind.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        x:Name="RootWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LithoMind"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ExtendClientAreaToDecorationsHint="True">

    <Window.DataTemplates>
        <TreeDataTemplate DataType="models:MenuItemModel" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Header}" VerticalAlignment="Center" Margin="5,0"/>
        </TreeDataTemplate>
    </Window.DataTemplates>

    <Window.Styles>
        <Style Selector="MenuItem" x:DataType="models:MenuItemModel">
            
            <Setter Property="Command" Value="{Binding $parent[Window].((vm:MainViewModel)DataContext).ExecuteMenuCommand}" />
            
            <Setter Property="CommandParameter" Value="{Binding CommandId}" />
            
        </Style>

        <Style Selector="RadioButton.NavBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Tag}" FontSize="14"/>
                            <TextBlock Text="{TemplateBinding Content}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.NavBtn:pointerover">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        <Style Selector="RadioButton.NavBtn:checked">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        
        <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *" Height="35" Background="#FFFFFF">
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,15,0" IsHitTestVisible="False">
                <Image Source="/Assets/avalonia-logo.ico" Width="18" Height="18" Margin="0,0,8,0"/>
                <TextBlock Text="LithoMind" FontWeight="Bold" Foreground="#333"/>
            </StackPanel>

            <Menu Grid.Column="1" ItemsSource="{Binding GlobalMenus}" VerticalAlignment="Center"/>
            
            <Border Grid.Column="2" Background="Transparent" IsHitTestVisible="False"/>
        </Grid>

        <Border Grid.Row="1" Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="0,1,0,1" Height="38">
             <Menu ItemsSource="{Binding CurrentModuleMenus}" VerticalAlignment="Center" Margin="5,0"/>
        </Border>

        <dock:DockControl Grid.Row="2" Layout="{Binding Layout}" />

        <Border Grid.Row="3" Background="#EEEEEE" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="0,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="数据管理" Tag="📂"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_DataMgr" IsChecked="True"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="井数据" Tag="📊"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_SingleWell"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="地层格架" Tag="🧱"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Strat"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="地震综合" Tag="🌊"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Seismic"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="井震联合" Tag="🔗"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Fusion"/>
                
                <RadioButton Classes="NavBtn" GroupName="Mods" Content="编图制图" Tag="🗺️"
                             Command="{Binding SwitchModuleCommand}" CommandParameter="Module_Mapping"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>