<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DeepTime.LithoMind.Desktop.ViewModels.Pages"
             x:Class="DeepTime.LithoMind.Desktop.Views.DataManagerView"
             x:DataType="vm:DataManagerViewModel">
    
    <Border Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1">
        <Panel>
            <!-- 本地文件目录面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='LocalFiles'}">
                <StackPanel>
                    <Border Background="#2C3E50" Padding="10">
                        <TextBlock Text="📁 本地文件目录" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="5">
                            <TextBlock Text="C:\\" Foreground="#34495E" Margin="0,10,0,0" FontWeight="Bold"/>
                            <TextBlock Text="  📂 Users" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📂 Program Files" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📂 Windows" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📄 文件列表待实现..." Foreground="#95A5A6" Margin="10,20,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 最近使用文件面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='LocalRecent'}">
                <StackPanel>
                    <Border Background="#8E44AD" Padding="10">
                        <TextBlock Text="⏱️ 最近使用" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="5">
                            <TextBlock Text="最近打开" Foreground="#9B59B6" Margin="0,10,0,0" FontWeight="Bold"/>
                            <TextBlock Text="  📄 示例项目.lmproj" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📄 测试数据.las" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📄 地震数据.segy" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📄 历史记录待实现..." Foreground="#95A5A6" Margin="10,20,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 工程文件目录面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='ProjectFiles'}">
                <StackPanel>
                    <Border Background="#16A085" Padding="10">
                        <TextBlock Text="📦 工程文件目录" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="5">
                            <TextBlock Text="当前工程" Foreground="#1ABC9C" Margin="0,10,0,0" FontWeight="Bold"/>
                            <TextBlock Text="  📁 井数据集" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📁 地震数据集" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📁 钻井完井报告" Foreground="#7F8C8D" Margin="10,2,0,0"/>
                            <TextBlock Text="  📄 工程结构待实现..." Foreground="#95A5A6" Margin="10,20,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 工程属性面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='ProjectProps'}">
                <StackPanel>
                    <Border Background="#E67E22" Padding="10">
                        <TextBlock Text="⚙️ 工程属性" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="8">
                            <TextBlock Text="基本信息" Foreground="#E74C3C" Margin="0,10,0,5" FontWeight="Bold"/>
                            <StackPanel Margin="10,0,0,0" Spacing="4">
                                <TextBlock Text="项目名称: 示例工程" Foreground="#7F8C8D"/>
                                <TextBlock Text="创建日期: 2025-12-25" Foreground="#7F8C8D"/>
                                <TextBlock Text="坐标系统: WGS84" Foreground="#7F8C8D"/>
                            </StackPanel>
                            <TextBlock Text="  📄 属性编辑待实现..." Foreground="#95A5A6" Margin="10,20,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 数据预览面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='Preview'}">
                <StackPanel>
                    <Border Background="#3498DB" Padding="10">
                        <TextBlock Text="🔍 数据预览" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Grid Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                            <TextBlock Text="📊" FontSize="60" HorizontalAlignment="Center" Foreground="#3498DB"/>
                            <TextBlock Text="数据预览区域" FontSize="24" Foreground="#2C3E50" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="支持多种数据格式：LAS、SEG-Y、Shapefile等" 
                                       FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                            <TextBlock Text="请从左侧选择文件进行预览" 
                                       FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center" FontStyle="Italic"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 详细信息面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='PreviewDetails'}">
                <StackPanel>
                    <Border Background="#27AE60" Padding="10">
                        <TextBlock Text="📋 详细信息" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="8">
                            <TextBlock Text="文件详情" Foreground="#2ECC71" Margin="0,10,0,5" FontWeight="Bold"/>
                            <StackPanel Margin="10,0,0,0" Spacing="4">
                                <TextBlock Text="文件大小: 待选择" Foreground="#7F8C8D"/>
                                <TextBlock Text="修改时间: --" Foreground="#7F8C8D"/>
                                <TextBlock Text="文件格式: --" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 元数据面板 -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='PreviewMeta'}">
                <StackPanel>
                    <Border Background="#E74C3C" Padding="10">
                        <TextBlock Text="🏷️ 元数据" FontSize="14" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <ScrollViewer>
                        <StackPanel Margin="10" Spacing="8">
                            <TextBlock Text="数据元信息" Foreground="#C0392B" Margin="0,10,0,5" FontWeight="Bold"/>
                            <StackPanel Margin="10,0,0,0" Spacing="4">
                                <TextBlock Text="数据来源: 待填充" Foreground="#7F8C8D"/>
                                <TextBlock Text="数据质量: --" Foreground="#7F8C8D"/>
                                <TextBlock Text="关键字: --" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 默认显示（兜底） -->
            <Border IsVisible="{Binding Id, Converter={x:Static ObjectConverters.IsNull}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                    <TextBlock Text="📂" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="数据管理模块" FontSize="24" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Panel>
    </Border>
</UserControl>