<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DeepTime.LithoMind.Desktop"
             xmlns:conv="using:DeepTime.LithoMind.Desktop.Converters"
             x:Class="DeepTime.LithoMind.Desktop.App"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <conv:EmojiIconConverter x:Key="EmojiIconConverter"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        
        <StyleInclude Source="avares://Dock.Avalonia.Themes.Fluent/DockFluentTheme.axaml" />
    </Application.Styles>
</Application>